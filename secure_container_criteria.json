{
	"name": "secure_container_criteria",
	"revision": 2,
	"project": "key",
	"mode": "decision",
	"rules":
	[
		{
			"name": "StaticSecurityScasnAnalysis",
			"mode": "advisory",
			"conditions":
			[
				{
					"eval": "filecontents.all_jobs_complete",
					"op": "=",
					"value": true,
					"reportType": "Attributes"
				},

				{
					"eval": "filecontents.high_issue_count",
					"op": "=",
					"value": 0
				},

				{
					"eval": "filecontents.medium_issue_count",
					"op": "<",
					"value": 2
				},

				{
					"eval": "eventType",
					"op": "=",
					"value": "SecurityScan"
				}
			]
		},
		{
			"name": "compliance",
			"conditions":
			[
				{
					"eval": "filecontents.compliance.*._source.compliant",
					"op": "=",
					"value": "true",
					"reportType": "Attributes",
					"reportAttributes":
					[
						"filecontents.compliance.*._source.description",
						"filecontents.compliance.*._source.reason"
					]
				},

				{
					"eval": "eventType",
					"op": "=",
					"value": "SecurityCompliance"
				}
			]
		},

		{
			"name": "vulnerability",
			"conditions":
			[
				{
					"eval": "filecontents.vulnerability.*._source.vulnerable",
					"op": "=",
					"value": false,
					"reportType": "Attributes",
					"reportAttributes":
					[
						"filecontents.vulnerability.*._source.namespace"
					]
				},

				{
					"eval": "eventType",
					"op": "=",
					"value": "SecurityCompliance"
				}
			]
		}
	]
}
